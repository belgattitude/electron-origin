{
  "name": "course",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "start": "webpack-dev-server --hot",
    "clean:all": "run-p clean:build clean:dist clean:release",
    "clean:build": "rimraf build",
    "clean:dist": "rimraf dist",
    "clean:release": "rimraf releases",
    "electron:start": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron -r babel-register ./src/electron/electron-main.js\"",
    "electron:build": "concurrently \"yarn run electron:build-main\" \"yarn run electron:build-renderer\"",
    "electron:build-main": "cross-env NODE_ENV=production node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.main.prod.js --colors",
    "electron:build-renderer": "cross-env NODE_ENV=production node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.renderer.prod.js --colors",
    "electron:release": "yarn electron:build && electron-builder --config.extraMetadata.main=./electron-main.prod.js"
  },
  "devDependencies": {
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.14",
    "add-module-exports-webpack-plugin": "^0.1.0",
    "autoprefixer": "^7.2.5",
    "awesome-typescript-loader": "^3.4.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chalk": "^2.3.0",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "electron": "1.8.2-beta.3",
    "electron-builder": "^19.52.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-loader": "^0.5.4",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.0.10",
    "prop-types": "^15.6.0",
    "react-hot-loader": "^4.0.0-beta.13",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "source-map-support": "^0.5.0",
    "style-loader": "^0.19.1",
    "ts-loader": "^3.2.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "wait-on": "^2.1.0",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.2",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-dev-server": "^2.10.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "bootstrap": "4.0.0-beta.3",
    "bootstrap-material-design": "4.0.0-beta.4",
    "bottlejs": "^1.6.3",
    "electron-is-dev": "^0.3.0",
    "electron-window-state": "^4.1.1",
    "execa": "^0.9.0",
    "ffmpeg-static": "^2.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "install": "^0.10.2",
    "jquery": "^3.2.1",
    "popper.js": "^1.12.9",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-dropzone": "^4.2.5",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "styled-components": "^2.4.0"
  },
  "build": {
    "appId": "io.soluble.course",
    "files": [
      {
        "from": "dist/electron",
        "to": "./",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "releases"
    },
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/*"
    ]
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=4.x",
    "yarn": ">=0.21.3"
  }
}
